<form class="form-horizontal" {{action 'authenticate' on='submit'}}>
  <fieldset>
    <div class="form-group">
      <label class="control-label">Email</label>
      <div>
        {{input type="email" class="form-control" placeholder="Enter Email" value=identification}}
      </div>
    </div>
    <div class="form-group">
      <label class="control-label">Password</label>
      <div>
        {{input type="password" class="form-control" placeholder="Enter Password" value=password}}
      </div>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Login</button>
    </div>
  </fieldset>
</form>
